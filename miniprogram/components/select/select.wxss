/* Componet/select/select.wxss */
.com-selectBox{
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.com-sContent input{
height: 100rpx;
line-height: 100rpx;
text-align: right;
padding-right: 50rpx;
}
.com-sContent{
  border-bottom: 1rpx solid #e2e2e2;
  background: white;
  font-size: 30rpx;
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
}
.com-sImg{
  position: absolute;
  width: 25rpx;
  height: 15rpx;
  right: 10rpx;
  top: 50%;
  transition: all .3s ease;
}
.com-sTxt{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding:0 40rpx 0 12rpx;
  font-size: 30rpx;
  color: #AAA6A2;
}
.com-sList{
  background: white;
  width: inherit;
  position: absolute;
  border: 1rpx solid #e2e2e2;
  border-top: none;
  box-sizing: border-box;
  z-index: 3;
  max-height: 300rpx;
  overflow: auto;
}
.com-sItem{
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #e2e2e2;
  padding: 0 6rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}
.com-sItem:first-child{
  border-top: none;
}
